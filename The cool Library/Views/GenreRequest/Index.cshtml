@model List<GenreRequest>

@{
    Layout = "~/Views/Shared/_LayoutBookCRUD.cshtml";
}

@if (TempData["Message"] != null)
{
    <h5 class="alert alert-info">@TempData["Message"]</h5>
}

@if (Model.Count == 0)
{
    <h2 class="alert alert-danger">No Category</h2>
    <a class="btn btn-success" asp-controller="Genre" asp-action="Add">
        Add
    </a>
} else {
     <div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2>Request <b>Category</b></h2>
					</div>
					<div class="col-sm-6">
						<a class="btn btn-success" asp-action="Add" asp-controller="Genre"><i class="material-icons">&#xE147;</i> <span>Add New Genre</span></a>					
					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						
						<th>ID</th>
						<th>Name</th>
						<th>Description</th>
						<th>Status</th>
						<th>Menu</th>
					</tr>
				</thead>
				<tbody>
					@foreach(var request in Model){
					<tr>
						<td>@request.Id</td>
						<td>@request.Name</td>
						<td>
							<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong"> Description </button>
						</td>

								<!-- Modal -->
								<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
									<div class="modal-dialog" role="document">
										<div class="modal-content">
											<div class="modal-header">
												<h5 class="modal-title" id="exampleModalLongTitle">Description</h5>
												<button type="button" class="close" data-dismiss="modal" aria-label="Close">
													<span aria-hidden="true">&times;</span>
												</button>
											</div>
											<div class="modal-body">
												@request.Description
											</div>
											<div class="modal-footer">
												<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
												
											</div>
										</div>
									</div>
								</div>


						@if(request.Status == 0){
							<td><h6>Pending</h6></td>
							<td>
								<a class="edit" asp-action="Accept" asp-controller="GenreRequest" asp-route-id="@request.Id"><i class="material-icons" data-toggle="tooltip" title="Accept">&#xE254;</i></a>
								<a class="delete" asp-action="Reject" asp-controller="GenreRequest" asp-route-id="@request.Id" onclick="return confirm('Do you want reject Genre: @request.Name');"><i class="material-icons" data-toggle="tooltip" title="Reject">&#xE872;</i></a>
							</td>
							
						} else if (request.Status == 1){
							<td><h6>Accept</h6></td>
							<td>No Action</td>
						} else if (request.Status == -1) {
							<td><h6>Reject</h6></td>
							<td>No Action</td>
						}						
					</tr>						
					}
				</tbody>
			</table>
			
		</div>
	</div>        
</div>
}