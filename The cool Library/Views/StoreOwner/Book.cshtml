@model List<Book>
@{
    Layout = "~/Views/Shared/_LayoutBookCRUD.cshtml";
}

@if (TempData["Message"] != null)
{
    <h5 class="alert alert-info">@TempData["Message"]</h5>
}

@if (Model.Count == 0)
{
    <h2 class="alert alert-danger">No book in DB. Add Book first !</h2>
    <a class="btn btn-success" asp-controller="StoreOwner" asp-action="AddBook">
        Add
    </a>
}
else
{
   <div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2>Manage <b>Employees</b></h2>
					</div>
					<div class="col-sm-6">
						<a class="btn btn-success" asp-action="AddBook" asp-controller="StoreOwner"><i class="material-icons">&#xE147;</i> <span>Add New Book</span></a>					
					</div>
				</div>
			</div>
			<table class="table table-striped table-hover table">
				<thead>
					<tr>
						
						<th>Image</th>
						<th>Name</th>
						<th>Author</th>
						<th>Quantity</th>
						<th>Price ($)</th>
						<th>&nbsp    </th>
						<th>   Menu</th>
						<th>&nbsp</th>
					</tr>
				</thead>
				<tbody>
					@foreach(var book in Model){
					<tr>
						<td>
							<img src="@book.Book_image" width="100" height="150"/>
						</td>
						<td>@book.Book_name</td>
						<td>@book.Book_author</td>
						<td>@book.Book_quantity</td>
						<td>$@book.Book_price</td>
						<td>
							@*<a class="btn btn-success" asp-action="editbook" asp-controller="storeowner" asp-route-id="@book.id">edit</a>*@
							<a class="edit" asp-action="EditBook" asp-controller="StoreOwner" asp-route-id="@book.Id"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
							
						</td>
						<td>
						@*<a class="btn btn-danger" asp-action="delete" asp-controller="storeowner" asp-route-id="@book.id" onclick="return confirm('delete @book.book_name?');">delete</a> *@
							<a class="delete" asp-action="Delete" asp-controller="StoreOwner" asp-route-id="@book.Id" onclick="return confirm('Delete @book.Book_name?');"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
						</td>
						<td>
							<a class="edit" asp-action="BookDetail" asp-controller="StoreOwner" asp-route-id="@book.Id"><i class="material-icons" data-toggle="tooltip" title="Detail">&#xE254;</i></a>
						</td>
					</tr>
					}
				</tbody>
			</table>
			
		</div>
	</div>        
</div>
}