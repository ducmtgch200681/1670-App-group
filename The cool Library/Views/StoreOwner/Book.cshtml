@model List<Book>
@if (TempData["Message"] != null)
{
    <h5 class="alert alert-info">@TempData["Message"]</h5>
}

@if (Model.Count == 0)
{
    <h2 class="alert alert-danger">No book in DB. Add Book first !</h2>
    <a class="btn btn-success" asp-controller="StoreOwner" asp-action="AddBook">
        Add
    </a>
}
else
{
    <div class="mt-3 text-center">
        <table class="table-bordered mt-3 mb-3 bg-light">
            <tr>
                <th class="h3 text-primary" colspan="4">Book List</th>
                <th>
                    <a class="btn btn-success" asp-controller="StoreOwner" asp-action="AddBook">
                        Add
                    </a>
                </th>
            </tr>
            <tr>
                <th>Book Id</th>
                <th>Book Name</th>
            </tr>
            @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Book_id</td>
                        <td>@book.Book_name</td>
                        <td>
                            <a asp-controller="StoreOwner" asp-action="Info" asp-route-id="@book.Book_id">
                                <img src="@book.Book_image" width="200px" height="250px">
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-controller="StoreOwner" asp-action="Update" asp-route-id="@book.Book_id">
                            Edit
                        </a>
                        @*if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))*@
                        @*{*@
                            <a class="btn btn-danger" asp-controller="StoreOwner" asp-action="Delete" asp-route-id="@book.Book_id"
                                                onclick="return confirm('Are you sure to delete this student?');">
                                    Delete
                            </a>
                        @*}*@

                                </td>
                    </tr>
                }
        </table>
    </div>
}