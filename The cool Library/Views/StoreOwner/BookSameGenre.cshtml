@model The_cool_Library.Models.Genre

<div class="container text-center">
    <div class="row">
        <div class="col">
            
            <h2 class="text text-success mt-3">Book Same Genre</h2>
        </div>
        <div class="col">
            <table class="table table-bordered">
                <tr>
                    <th colspan="2">Book List</th>
                    <th>TOTAL: @Model.Books.Count</th>
                </tr>
                <tr>
                    <th>Book Id</th>
                    <th>Book Name</th>
                    <th>Book Image</th>
                </tr>
                @foreach (var book in Model.Books)
                {
                    <tr>
                        <td>@book.Id</td>
                        <td>@book.Book_name</td>
                        <td>
                            <a asp-controller="StoreOwner" asp-action="BookDetail" asp-route-id="@book.Id">
                                <img src="@book.Book_image width="80" height="80">
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>