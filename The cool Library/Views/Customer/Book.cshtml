@model dynamic

@if (TempData["Message"] != null)
{
    <h5 class="alert alert-danger">@TempData["Message"]</h5>
}

@{
    Layout = "_LayoutViewBook";
}

<hr />
<div class="row">
    <div class="col-6 text">
        <form class="input-group" method="post" asp-controller="Customer" asp-action="Search" style="margin-left:-15px">
                <div class="form-outline col-10 ">
                    <input type="search" name="key" class="form-control" placeholder="Search" />
                </div>
                <button type="submit" class="btn" style="background:mediumpurple">
                    <i class="icon-search"></i>
                </button>
        </form>
    </div>

    <div class="col-6 text-right">
        <form >
            <div>
                <button class="btn" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background:mediumpurple">Sort</button>
                <button class="btn" data-sort="none" style="background:mediumpurple; height:39px">
                    <i class="icon-sort"></i>
                </button>
                <ul class="dropdown-menu">
                    <li><a asp-controller="Customer" asp-action="SortName" style="color:mediumpurple">Name</a></li>
                    <li><a asp-controller="Customer" asp-action="SortPrice" style="color:mediumpurple">Price</a></li>
                </ul>
            </div>
        </form>
    </div>

</div>



<div class="container page-wrapper">
    <div class="page-inner">
        <div class="row">
            @foreach (var book in Model.Books)
            {
                <div class="el-wrapper">
                    <div class="box-up">
                        <a asp-controller="Customer" asp-action="BookDetail" asp-route-id="@book.Id">
                            <img class="img" src="@book.Book_image" alt="">
                        </a>
                        <div class="img-info">
                            <div class="info-inner">
                                <span class="p-name">@book.Book_name</span>
                                <span class="p-company">@book.Book_author</span>
                            </div>
                            <div class="a-size size">Available in storage : <span class="size">@book.Book_quantity</span></div>
                        </div>
                    </div>
                    <div class="box-down">
                        <div class="h-bg">
                            <div class="h-bg-inner"></div>
                        </div>
                        <a class="cart" href="#">
                            <span class="price">$@book.Book_price</span>
                            <span class="add-to-cart">
                                <span class="txt">Add in cart</span>
                            </span>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


