@model List<Book>

     @if (TempData["Message"] != null){
        <h3 class="alert alert-info">@TempData["Message"]</h3>
    }

    @if (Model.Count == 0) {
        <h2 class="alert alert-warning">No book in system</h2>
    } else {
        <div class="carousel-item">
            @foreach(var book in Model){
                <img src="@book.Book_image">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@book.Book_name</h5>
                    <a class="btn btn-link btn-sm text text-center" asp-action="Detail" asp-controller="Book" asp-route-id="@book.Book_id">Detail</a>
                </div>
            }
        </div>

    <div class="container mt-5 mb-5">
        <div class="d-flex justify-content-center row">
            <div class="col-md-10">
                @foreach (var book in Model){
                    <div class="row p-2 bg-white border rounded mt-2">
                        <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src="@book.Book_image"></div>
                        <div class="col-md-6 mt-1">
                            <h5>@book.Book_name</h5>
                            <div class="d-flex flex-row">
                                <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div><span>$$$</span>
                            </div>
                            <div class="mt-1 mb-1 spec-1"><span>Author</span><span class="dot"></span><span></span><span class="dot"></span><span>@book.Book_author<br></span></div>
                            <div class="mt-1 mb-1 spec-1"><span>Quantity</span><span class="dot"></span><span></span><span class="dot"></span><span>@book.Book_quantity<br></span></div>
                            <p class="text-justify text-truncate para mb-0">@book.Book_description<br><br></p>
                        </div>
                        <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                            <div class="d-flex flex-row align-items-center">
                                <h4 class="mr-1">@book.Book_price</h4>
                            </div>
                            <h6 class="text-success">Free shipping</h6>
                            <div class="d-flex flex-column mt-4">
                                <button class="btn btn-primary btn-sm" asp-action="Detail" asp-controller="Book" asp-route-id="@book.Book_id">Details</button>
                                <button class="btn btn-outline-primary btn-sm mt-2" type="button">Add to wishlist</button>
                             </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    }


