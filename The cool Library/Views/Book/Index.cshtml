@model List<Book>
    
@*Hien thị danh sách sách cho store owner*@

    @if (TempData["Message"] != null){
        <h3 class="alert alert-info">@TempData["Message"]</h3>
    }

    @if (Model.Count == 0) {
        <h2 class="alert alert-warning">No book in system</h2>
        <a class="btn btn-success" asp-action="Add" asp-controller="Book"> Add </a>
    } else {
       <div class="container mt-3 text-center">
    <table class="table-bordered text-center mt-3 mb-3 bg-light">
        <tr>
            <th class="h3 text-primary" colspan="4">Book List</th>
            <th>
                <a class="btn btn-success" asp-controller="Student" asp-action="Add">
                    Add
                </a>
            </th>
        </tr>
        <tr>
            <th>Title</th>
            <th>Cover</th>
            <th>Price</th>
            <th>Menu</th>
        </tr>

        @foreach (var book in Model){
            <tr>
                    <td>@book.Book_name</td>
                    <td>
                        <img src="@book.Book_image" height="150" width="150" />
                    </td>
                    <td>@book.Book_price</td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-controller="Book" asp-route-id="@book.Book_id">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Delete" asp-controller="Book" asp-route-id="@book.Book_id" onclick="return confirm('Do you want delete this book @book.Book_name? ');">Delete</a>
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-action="Detail" asp-controller="Book" asp-route-id="@book.Book_id">Detail</a>
                    </td>
            </tr>
        }
        </table>
        </div>
    }