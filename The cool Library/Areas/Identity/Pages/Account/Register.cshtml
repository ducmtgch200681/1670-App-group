@page
@model RegisterModel

@{
    Layout = "_LayoutRegister";
}

<hr />
<div>
     <a type="button" class="btn" style="background:burlywood; color:white" asp-controller="Customer" asp-action="Index">Back</a>
</div>
<section class="signup">
    <div class="signup-content">
        <div class="signup-form">
            <h2 class="form-title">Sign up</h2>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register-form">
                <div class="form-group">
                    <label asp-for="Input.Email"><i class="zmdi zmdi-email"></i></label>
                    <input placeholder="Email" asp-for="Input.Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"><i class="zmdi zmdi-lock"></i></label>
                    <input placeholder="Password" asp-for="Input.Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                    <input placeholder="Repeat your password" asp-for="Input.ConfirmPassword" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" required/>
                    <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service" >Terms of service</a></label>
                </div>
                <div class="form-group form-button">
                    <input type="submit" class="form-submit" style="background:burlywood" />
                </div>
            </form>
        </div>
        <div class="signup-image">
            <figure><img src="https://xd.adobe.com/ideas/wp-content/uploads/2020/02/designsprints.png" alt="sing up image"></figure>
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="signup-image-link"><u>I am already member</u></a>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}